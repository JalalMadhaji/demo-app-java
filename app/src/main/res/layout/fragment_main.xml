<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

    <TextView
        android:id="@+id/floatTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:text="Float moved successfully"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/amountTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:layout_marginTop="6dp"
        android:text="8,500 YER"
        app:layout_constraintTop_toBottomOf="@id/floatTV"/>

    <ImageView
        android:id="@+id/checkIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_check_circle"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/amountTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/green" />

    <androidx.cardview.widget.CardView
        android:id="@+id/storeCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPaddingBottom="26dp"
        app:contentPaddingTop="26dp"
        app:contentPaddingLeft="20dp"
        app:contentPaddingRight="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="6dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp"
        android:outlineSpotShadowColor="#57000000"
        app:layout_constraintTop_toBottomOf="@id/checkIcon">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:cardBackgroundColor="#ddd"
                app:cardElevation="0dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@id/cardImage"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To"
                    android:textColor="#777" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Store One"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:textSize="22sp"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/transferDetailsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transfer details"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:paddingStart="6dp"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/storeCard"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/transferCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp"
        android:outlineSpotShadowColor="#57000000"
        app:layout_constraintTop_toBottomOf="@id/transferDetailsLabel">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/firstRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Amount"
                    android:textColor="#777" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8,500 YER"
                    android:textColor="@color/blue"
                    android:textSize="16sp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <View
                android:id="@+id/cardDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?dividerHorizontal"
                app:layout_constraintTop_toBottomOf="@id/firstRow"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/secondRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/cardDivider">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Transaction ID"
                    android:textColor="#777" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="87125586"
                    android:textColor="@color/blue"
                    android:textSize="16sp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/downloadBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/shareBtn"
            app:icon="@drawable/ic_save"
            app:iconTint="@color/blue"
            android:text="Download"
            android:layout_marginTop="26dp"
            android:layout_marginHorizontal="6dp"
            android:textColor="@color/blue"
            android:stateListAnimator="@null"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/transferCard"
            android:background="@null"
            android:backgroundTint="@color/white"
            app:strokeWidth="1dp"
            app:strokeColor="@color/blue"
            app:cornerRadius="7dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/shareBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            app:layout_constraintStart_toEndOf="@id/downloadBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:icon="@drawable/ic_share"
            app:iconTint="@color/blue"
            android:text="Share"
            android:textAllCaps="false"
            android:textColor="@color/blue"
            android:stateListAnimator="@null"
            android:layout_marginHorizontal="6dp"
            app:layout_constraintTop_toTopOf="@id/downloadBtn"
            android:background="@null"
            android:backgroundTint="@color/white"
            app:strokeWidth="1dp"
            app:strokeColor="@color/blue"
            app:cornerRadius="7dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/finishBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Finish"
            android:textAllCaps="false"
            android:stateListAnimator="@null"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="6dp"
            app:layout_constraintTop_toBottomOf="@id/downloadBtn"
            android:backgroundTint="@color/blue"
            app:cornerRadius="7dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>